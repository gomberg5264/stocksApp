{
    "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
    "linterOptions": {
        "exclude": [
            "config/**/*.js",
            "node_modules/**/*.ts",
            "coverage/lcov-report/*.js"
        ]
    },
    "rules": {
        "ordered-imports": [false],
        "object-literal-sort-keys": [false],
        "no-shadowed-variable": [
            false,
            {
                "class": true,
                "enum": true,
                "function": true,
                "interface": false,
                "namespace": true,
                "typeAlias": false,
                "typeParameter": false
            }
        ],
        "jsx-no-lambda": false,
        "no-console": false

    },
    "jsRules": {
        "no-console": false
    }

}